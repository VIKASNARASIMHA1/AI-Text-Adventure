{
  "player": {
    "default_name": "Adventurer",
    "allow_custom_name": true,
    "remember_last_played": true
  },
  
  "gameplay": {
    "difficulty": "normal",
    "show_tutorial": true,
    "autosave_interval": 300,
    "max_inventory_size": 30,
    "enable_combat_animations": true,
    "enable_critical_hits": true,
    "friendly_fire": false
  },
  
  "audio": {
