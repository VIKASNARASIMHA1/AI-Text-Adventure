    "music_volume": 0.7,
    "sfx_volume": 0.8,
    "ambient_volume": 0.5,
    "enable_music": true,
    "enable_sfx": true,
    "enable_ambient": true
  },
  
  "display": {
    "text_speed": "medium",
    "color_enabled": true,
    "screen_width": 80,
    "screen_height": 24,
    "font_size": 12,
    "show_fps": false,
    "fullscreen": false,
